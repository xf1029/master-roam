            android:layout_marginLeft="@dimen/detaileft_margin"
            android:lineSpacingExtra="8sp"
            android:textColor="@color/detail_des"
            android:layout_marginTop="@dimen/detaileft_margin"
            android:layout_height="wrap_content" />

    </LinearLayout>

  </LinearLayout>
</ScrollView>

    <LinearLayout
        android:id="@+id/ll_create_order_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_price_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:textSize="14sp"
            android:text="Amount Total"
            android:paddingLeft="20dp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="USD 10"
            android:textColor="@color/red"
            android:textSize="22sp"
            android:paddingLeft="2dp"
            android:background="@color/white"/>


        <Button
            android:id="@+id/bt_commit"
            android:layout_height="45dp"
            android:layout_width="100dp"
            android:layout_marginRight="@dimen/detaileft_margin"
            android:background="@drawable/ic_buy"
            android:text="order now"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>










</LinearLayout>
