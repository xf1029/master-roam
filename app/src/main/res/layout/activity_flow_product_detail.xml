<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:qinc="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/baseColorLight">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@mipmap/ic_arrow_back_white"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:progress="0"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:progressDrawable="@drawable/progress_bar"
        android:visibility="visible"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <!-- 暂时变成 RelativeLayout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--暂时不显示网页, 直接显示信息代替-->
            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/iv_product_pic"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                />

            <ScrollView
                android:id="@+id/sv_info"
                android:layout_below="@id/iv_product_pic"
                android:layout_above="@id/ll_create_order_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_product_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left|center_vertical"
                                android:text="香港流量1G"
                                android:textColor="@color/textColorBlack1"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left|center_vertical"
                                android:text="@string/total_flow"
                                android:textColor="@color/sbc_header_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_total_flow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:gravity="left|center_vertical"
                                android:textColor="@color/sbc_header_text"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left|center_vertical"
                                android:text="@string/effective_days"
                                android:textColor="@color/sbc_header_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_effective_days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:gravity="left|center_vertical"
                                android:textColor="@color/sbc_header_text"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left|center_vertical"
                                android:text="@string/coverage"
                                android:textColor="@color/sbc_header_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_coverage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:gravity="left|center_vertical"
                                android:textColor="@color/sbc_header_text"
                                android:textSize="14sp"
                                android:lineSpacingExtra="6dp"/>
                        </LinearLayout>

                        <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginBottom="1dp"-->
                        <!--android:orientation="horizontal">-->

                        <!--<TextView-->
                        <!--android:layout_width="150dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:gravity="left|center_vertical"-->
                        <!--android:text="@string/notice"-->
                        <!--android:textColor="@color/textColorBlack1"-->
                        <!--android:textStyle="bold"-->
                        <!--android:textSize="14sp" />-->

                        <!--<TextView-->
                        <!--android:id="@+id/tv_notice"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:layout_marginLeft="5dp"-->
                        <!--android:gravity="left|center_vertical"-->
                        <!--android:textColor="@color/textColorBlack1"-->
                        <!--android:textSize="14sp" />-->
                        <!--</LinearLayout>-->


                    </LinearLayout>
                </LinearLayout>


            </ScrollView>


            <LinearLayout
                android:id="@+id/ll_create_order_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tv_price_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingLeft="20dp"
                    android:background="@color/baseColorDark"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="left|center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:paddingLeft="2dp"
                    android:background="@color/baseColorDark"/>


                <Button
                    android:id="@+id/bt_commit"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@color/baseColorLight"
                    android:text="@string/button_purchase"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_pay"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="0dp"
                    android:padding="14dp"
                    android:src="@mipmap/ic_close"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:text="@string/tip_payment"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#A0A0A0"/>

            <LinearLayout
                android:id="@+id/ll_order_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_result"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/checking"
                    android:visibility="visible"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="5"/>

                <Button
                    android:id="@+id/bt_close"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@color/baseColorLight"
                    android:text="@string/button_close"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:visibility="visible"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                >

                <TextView
                    android:id="@+id/tv_package_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="20dp"
                    android:textColor="#888888"
                    android:text="产品名称"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_money_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="end"
                        android:textSize="12sp"
                        android:text="RMB"/>

                    <TextView
                        android:id="@+id/tv_pay_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:text="28.80"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="start"
                        android:textSize="12sp"
                        android:text="元"
                        android:visibility="invisible"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#888888"
                    android:text="设备号：TGT12345678"
                    android:gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="20dp"
                    android:background="#A0A0A0"
                    android:visibility="visible"
                    />

                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:textColor="@color/baseColorLight"
                    android:text="@string/tip_select_start_date"
                    android:gravity="center"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:id="@+id/layout_purchase_day"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_height="40dp">

                <TextView
                    android:id="@+id/tv_purchase_count"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:textColor="@color/baseColorLight"
                    android:text="@string/tip_purchase_count"
                    android:gravity="center"
                    android:layout_weight="1"

                    />

                    <com.a51tgt.t6.ui.view.NumberButton
                        android:id="@+id/number_button"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        qinc:editable="false" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="#A0A0A0"
                    android:visibility="visible"
                    />

                <LinearLayout
                    android:id="@+id/ll_wechat_tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_wx_pay"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@color/black"
                        android:text="@string/title_wechat"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@null"
                        android:layout_weight="5"/>
                    <CheckBox
                        android:id="@+id/wechat_check"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:checked="false"/>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_card_tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/card_tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_credit"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:textColor="@color/black"
                            android:text="@string/title_credit_card"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:background="@null"
                            android:layout_weight="5"/>

                        <CheckBox
                            android:id="@+id/card_check"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:clickable="false"
                            android:focusable="false"
                            android:checked="false"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/desc_layout"
                        android:layout_below="@id/card_tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:text="@string/title_card_category" />
                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/alipay_tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_alipay_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_alipay"/>
                    <TextView
                        android:id="@+id/tv_alipay_pay_title"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@color/black"
                        android:text="@string/title_alipay"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@null"
                        android:layout_weight="5"/>
                    <CheckBox
                        android:id="@+id/alipay_check"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:checked="false"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/paypal_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_pay_paypal"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/paypal"/>
                    <TextView
                        android:id="@+id/tv_paypal_title"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@color/black"
                        android:text="@string/title_paypal" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@null"
                        android:layout_weight="5"/>
                    <CheckBox
                        android:id="@+id/paypal_check"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:checked="false"/>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"/>

                <Button
                    android:id="@+id/bt_buy_now"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@color/baseColorLight"
                    android:text="@string/button_purchase"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>



        </LinearLayout>


    </FrameLayout>


</LinearLayout>
