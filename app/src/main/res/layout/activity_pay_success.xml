<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/baseColorLight">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="Payment"/>
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_closeorder"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:src="@mipmap/about" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
    android:textColor="@color/black"
        android:gravity="center_vertical"
        android:text="HK GTWireless Limited\n香港捷智科技有限公司"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="13dp"

        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"

        android:text="Unit 715-6, 7th Floor\nNan Fung Commercial Centre\n19 Lam Lok St\nKowloon Bay, Hong Kong\nEmail: info@gtwfi.com"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        android:background="@color/black"
        />
    <TextView
        android:id="@+id/pay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:text="2018-09-28"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        android:background="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/pay_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="2"
        android:textColor="@color/black"
        android:layout_gravity="left"
        android:text="asian data packget"

        />
        <TextView
            android:id="@+id/pay_price"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="end"

            android:text="$5(USD)"
            />


    </LinearLayout>
    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        android:layout_marginTop="3dp"
        android:textSize="13dp"

        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        android:background="@color/black"
        />
    <TextView
        android:id="@+id/pay_total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:gravity="end"
        android:text="Total       $5(USD)"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="bottom"
        android:textColor="#888888"
        android:visibility="invisible"
        android:text="深圳市途鸽信息有限公司版权所有 ©2018"
        android:gravity="center"/>

            <TextView
                android:id="@+id/pay_summary"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"

                android:gravity="center_vertical"
>
            </TextView>



        </LinearLayout>



    </ScrollView>

</LinearLayout>