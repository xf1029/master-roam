<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#e4e4e4">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="onClick"
            android:padding="12dp"
            android:src="@mipmap/ic_arrow_back_white"
            android:layout_alignParentBottom="true"
            />

        <RelativeLayout
            android:layout_toRightOf="@+id/iv_back"
            android:layout_toLeftOf="@+id/tv_search_flow"
            android:id="@+id/rl_fragment_fole_category"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_ffffff_from_30"
            android:padding="5dp"

            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/iv_flow_category_fragment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/search"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/et_search_flow"
                android:layout_toRightOf="@+id/iv_flow_category_fragment"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/title_shop_search"
                android:layout_marginLeft="5dp"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textSize="14dp"
                android:layout_centerVertical="true"

                />
            <ImageView
                android:id="@+id/iv_search_flow_box_delet"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/remove"
                android:onClick="onClick"
                />
        </RelativeLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_search_flow"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:text="搜索"
            android:visibility="gone"
            android:alpha="0"

            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:onClick="onClick"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_search_history"
            android:padding="10dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            />
        <ImageView
            android:id="@+id/iv_search_flow_history_delet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/del"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:onClick="onClick"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_search_flow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
</LinearLayout>