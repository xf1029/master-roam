<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_package_name"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="5"
            android:textStyle="bold"
            android:gravity="left|center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_in_using"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_in_using"
            android:gravity="left|center_vertical"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            android:background="@drawable/view_with_radius_corner_and_bg"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textSize="10sp"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:textColor="#A0A0A0"
        android:text="@string/tip_translator_package_introduce"
        android:textSize="11sp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_flow_count_title"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:gravity="left|center_vertical"
            android:text="@string/device_flow_total_count"
            android:textColor="@color/textColorBlack1"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_flow_count"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/textColorBlack1"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_flow_left_title"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:gravity="left|center_vertical"
            android:text="@string/device_flow_left"
            android:textColor="@color/textColorBlack1"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_flow_left"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/textColorBlack1"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:gravity="left|center_vertical"
            android:text="@string/device_flow_countries"
            android:textColor="@color/textColorBlack1"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_flow_countries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/textColorBlack1"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:gravity="left|center_vertical"
            android:text="@string/device_flow_package_starttime"
            android:textColor="@color/textColorBlack1"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_package_starttime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/textColorBlack1"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:gravity="left|center_vertical"
            android:text="@string/device_flow_package_endtime"
            android:textColor="@color/textColorBlack1"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_package_endtime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/textColorBlack1"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>